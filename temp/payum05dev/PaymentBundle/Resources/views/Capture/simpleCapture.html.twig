{% extends "ApplicationPaymentBundle::layout.html.twig" %}

{% block title "Payment demo - Simple purchase - Finished" %}

{% block content %}    
    <div class="block">
        Payment status:
        {% if status.success %}
            Successful!
        {% elseif status.canceled %}
            Canceled
        {% elseif status.failed %}
            Failed
        {% elseif status.pending %}
            Pending
        {% elseif billingAgreementStatus.expired %}
            Expired
        {% elseif billingAgreementStatus.suspended %}
            Suspended
        {% else %}
            Status unknown
        {% endif %}
    </div>

    <div class="block">
        <ul>
            {% for key, value in status.model %}
                <li>{{ key }}: {{ value }}</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}

{% set code = code(_self) %}